<Window x:Class="Notatki_Studenckie_v3.TopicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notatki_Studenckie_v3"
        mc:Ignorable="d"
        Title="Topic" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="2" Background="#FFEDEDED">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TopicName" VerticalAlignment="Center" Margin="10,0,10,0" Grid.Column="0"/>
            
        </Grid>

        <Grid Grid.Row="2" Grid.Column="2" Background="#FFEDEDED">
            <TextBox x:Name="NormalNote" Text="Wpisz notatkę..." Foreground="Gray" Margin="10"/>
        </Grid>
    </Grid>
</Window>
